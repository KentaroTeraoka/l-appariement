            <i class="fa fa-2x fa-times"></i>
          </div>
          <div id="login-form">
            <h2>IDログイン</h2>
            <%= form_tag("/login") do%>
              <form action="#">
                <input class="form-control" type="text" name="user_id" placeholder="ID">
                <input class="form-control" type="password" name="password" placeholder="パスワード">
