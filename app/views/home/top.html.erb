            <i class="fa fa-2x fa-times"></i>
          </div>
          <div id="signup-form">
            <h2>IDで新規登録</h2>
            <%= form_tag("/users/create") do %>
              <form action="#">
                <input class="form-control" type="text" name="name" value="<%= @user.name %>" placeholder="ユーザー名">
                <input class="form-control" type="text" name="user_id" value="<%= @user.user_id %>" placeholder="ID">
                <input class="form-control" type="radio" name="sex" value="male">男性
                <input class="form-control" type="radio" name="sex" value="female">女性
                <input class="form-control" type="password" name="password" value="<%= @user.password %>" placeholder="パスワード">
                <input class="submit-btn" type="submit" value="新規登録">
              </form>
            <% end %>
          </div>
        </div>
      </div>
